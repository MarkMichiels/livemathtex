{
    "_comment": "⚠️ IMPORTANT: Keyboard shortcuts are NOT automatically configured!",
    "_comment2": "Tasks defined here are available via 'Tasks: Run Task', but keybindings must be manually added.",
    "_comment3": "See docs/EDITOR_INTEGRATION.md section 'Recommended Keyboard Shortcuts' for keybinding setup.",
    "_comment4": "Copy keybindings to: ~/.config/Cursor/User/keybindings.json (or Code/User/keybindings.json)",
    "version": "2.0.0",
    "tasks": [
        {
            "label": "LiveMathTeX: Process Current File",
            "type": "shell",
            "command": "livemathtex",
            "args": [
                "process",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "LiveMathTeX: Clear Current File",
            "type": "shell",
            "command": "livemathtex",
            "args": [
                "clear",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "LiveMathTeX: Clean (Smart)",
            "type": "shell",
            "command": "livemathtex",
            "args": [
                "copy",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "LiveMathTeX: Process Current File (Verbose)",
            "type": "shell",
            "command": "livemathtex",
            "args": [
                "process",
                "${file}",
                "--verbose"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "group": "build"
        }
    ]
}
