{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "LiveMathTeX: Process Current File",
            "type": "shell",
            "command": "livemathtex",
            "args": [
                "process",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "LiveMathTeX: Process Current File (Verbose)",
            "type": "shell",
            "command": "livemathtex",
            "args": [
                "process",
                "${file}",
                "--verbose"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "LiveMathTeX: Process to Output File",
            "type": "shell",
            "command": "livemathtex",
            "args": [
                "process",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}_output.md"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [],
            "group": "build"
        }
    ]
}
